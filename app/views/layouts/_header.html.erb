<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("sample_app"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("menu_home"), home_path %></li>
        <li><%= link_to t("menu_help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("menu_user"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
              <%= t "menu_account" %><b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("menu_profile"), current_user %></li>
              <li><%= link_to t("menu_setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("menu_logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("menu_login"), login_path %></li>
        <% end %>
        <li><%= link_to "en", locale: "en" %></li>
        <li><%= link_to "vi", locale: "vi" %></li>
        <script>
          I18n.defaultLocale = "<%= I18n.default_locale %>"
          I18n.locale = "<%= I18n.locale || I18n.default_locale %>"
        </script>
      </ul>
    </nav>
  </div>
</header>
